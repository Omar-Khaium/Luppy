<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/shop_individual_product_item_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/shop_individual_product_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/shop_individual_product_item_image"
                    android:layout_alignBottom="@+id/shop_individual_product_item_image"
                    android:padding="5dp"
                    android:text="Price : 2,000 TK"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textS"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>