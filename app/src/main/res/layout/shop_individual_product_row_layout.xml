<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#801e1e1e"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/shop_individual_product_item_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#80bfbfbf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#80000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_individual_product_item_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="2dp"
                        android:text="Price : 2,000 TK"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shop_individual_product_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="2dp"
                        android:text="Price : 2,000 TK"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textS"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/shop_individual_product_item_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Cart" />

            <LinearLayout
                android:id="@+id/shop_individual_product_item_cart_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/shop_individual_product_item_cart_remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_remove" />

                <EditText
                    android:id="@+id/shop_individual_product_item_cart_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:padding="3dp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/shop_individual_product_item_cart_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>