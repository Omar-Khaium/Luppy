<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:padding="15dp"
    tools:context=".CheckoutActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/checkout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#99f0f0f0"
                android:gravity="center"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:text="123456 BDT"
                android:textSize="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/checkout_submit"
                android:layout_below="@+id/checkout_amount"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="#484848"
                    app:boxBackgroundColor="#484848"
                    app:boxStrokeColor="#484848">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/checkout_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Number"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="@dimen/textL" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="#484848"
                    app:boxBackgroundColor="#484848"
                    app:boxStrokeColor="#484848">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/checkout_card_expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="MM/YY"
                        android:inputType="date"
                        android:maxLines="1"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="@dimen/textL" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#484848"
                    app:boxBackgroundColor="#484848"
                    app:boxStrokeColor="#484848">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/checkout_card_cvc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CVC Code"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:textColor="#484848"
                        android:textColorHint="#484848"
                        android:textSize="@dimen/textL" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:id="@+id/checkout_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_blue_bright"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="PAY  NOW"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textL"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>