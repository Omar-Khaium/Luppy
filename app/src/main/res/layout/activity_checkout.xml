<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context=".CheckoutActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/checkout_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="123456 BDT"
                android:textSize="50dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/checkout_submit"
                android:layout_below="@+id/checkout_amount"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full name"
                            android:inputType="textPersonName"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_customer_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email address"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_customer_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_customer_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:hint="Shipping address"
                            android:inputType="textPostalAddress|textMultiLine"
                            android:maxLength="60"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_customer_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:hint="Comment"
                            android:inputType="text|textMultiLine"
                            android:maxLength="120"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_card_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Card Number"
                            android:inputType="number"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_card_expire_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="MM/YY"
                            android:inputType="date"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@android:color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/checkout_card_cvc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CVC Code"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/textM" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/checkout_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_blue_bright"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="PAY  NOW"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textM"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>