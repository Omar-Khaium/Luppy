<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LadiesItemsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ladies_items_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorLadies"
            app:title="Ladies Items" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/ladies_items_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="25dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/ladies_items_dresses"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:background="@drawable/female_gradient"
                android:text="Women's Dresses"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textXXL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ladies_items_jeans"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:background="@drawable/male_gradient"
                android:text="Women's Jeans"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textXXL"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ladies_items_tshirts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/extra_gradient"
                android:text="Women's T-Shirt"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textXXL"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>